{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019"],
    "module": "CommonJS",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./dist/types",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "files": [
    "./src/index.ts"
  ],
  "exclude": [
    "./**/__mocks__/*",
    "./**/__tests__/*"
  ]
}
